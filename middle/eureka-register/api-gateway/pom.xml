			<version>2.4.4</version>
		</dependency>

	</dependencies>
	<dependencyManagement>

	<dependencies>

	<dependency>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.3.3.RELEASE</version>
		<type>pom</type>
		<scope>import</scope>
